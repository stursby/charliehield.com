---
if (import.meta.env.MODE === 'production') {
  return Astro.redirect('/')
}

import MeshGradient from '../components/MeshGradient.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Charlie Hield - OG Image</title>
    <link
      href="https://fonts.bunny.net/css?family=gabarito:400,500,600,700,800,900|instrument-serif:400,400i&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Gabarito', sans-serif;
        background-color: #f5e6d3;
        color: #1a1a1a;
        overflow: hidden;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
      }

      .hero {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding-top: 20vh;
        text-align: center;
        position: relative;
        background-color: #f5e6d3;
        overflow: hidden;
      }

      h1 {
        position: relative;
        z-index: 10;
        font-family: 'Instrument Serif', serif;
        font-size: clamp(4rem, 11vw, 9.5rem);
        line-height: 0.9;
        letter-spacing: -0.03em;
        color: #1a1a1a;
      }

      h1 em {
        font-style: italic;
        color: #e85811;
        position: relative;
        display: inline-block;
      }

      h1 em::after {
        content: '';
        position: absolute;
        bottom: 0.04em;
        left: -0.1em;
        right: -0.03em;
        height: 0.15em;
        background-color: rgba(232, 88, 17, 0.2);
        border-radius: 9999px;
        z-index: -1;
      }

      .lego-image {
        position: absolute;
        bottom: 5rem;
        right: 5rem;
        z-index: 10;
        width: 10rem;
        height: auto;
        border-radius: 1rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        transform: rotate(-4deg);
      }

      .website-url {
        position: absolute;
        bottom: 5rem;
        left: 5rem;
        z-index: 10;
        font-family: 'Instrument Serif', serif;
        font-style: italic;
        font-size: 1.75rem;
        color: #1a1a1a;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
      }

      @media (max-width: 768px) {
        .lego-image {
          width: 7rem;
          bottom: 3rem;
          right: 3rem;
        }

        .website-url {
          font-size: 1.25rem;
          bottom: 3rem;
          left: 3rem;
        }
      }
    </style>
  </head>
  <body>
    <section class="hero">
      <MeshGradient />
      <h1>
        Building<br /><em>Digital</em><br />Experiences
      </h1>
      <img src="/lego.png" alt="Lego minifigure" class="lego-image" />
      <div class="website-url">charliehield.com</div>
    </section>
  </body>
</html>
