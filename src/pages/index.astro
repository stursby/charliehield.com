---
import Layout from '../layouts/Layout.astro'
import MeshGradient from '../components/MeshGradient.astro'
---

<Layout>
  <link
    href="https://fonts.bunny.net/css?family=gabarito:400,500,600,700,800,900|instrument-serif:400,400i&display=swap"
    rel="stylesheet"
  />

  <style>
    @keyframes hero-slide-up-1 {
      from {
        opacity: 0;
        transform: translateY(80px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes hero-slide-up-2 {
      from {
        opacity: 0;
        transform: translateY(80px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes hero-slide-up-3 {
      from {
        opacity: 0;
        transform: translateY(80px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @keyframes hero-slide-up-4 {
      from {
        opacity: 0;
        transform: translateY(80px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    .hero-overline {
      animation: hero-slide-up-1 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.1s both;
    }
    .hero-title {
      animation: hero-slide-up-2 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s both;
    }
    .hero-subtitle {
      animation: hero-slide-up-3 1s cubic-bezier(0.16, 1, 0.3, 1) 0.4s both;
    }
    .hero-ctas {
      animation: hero-slide-up-4 1s cubic-bezier(0.16, 1, 0.3, 1) 0.6s both;
    }
    .mobile-menu.open a:nth-child(1) {
      transition:
        opacity 0.4s 0.1s,
        transform 0.4s 0.1s,
        color 0.3s,
        padding-left 0.3s;
    }
    .mobile-menu.open a:nth-child(2) {
      transition:
        opacity 0.4s 0.18s,
        transform 0.4s 0.18s,
        color 0.3s,
        padding-left 0.3s;
    }
    .mobile-menu.open a:nth-child(3) {
      transition:
        opacity 0.4s 0.26s,
        transform 0.4s 0.26s,
        color 0.3s,
        padding-left 0.3s;
    }
    .mobile-menu.open a:nth-child(4) {
      transition:
        opacity 0.4s 0.34s,
        transform 0.4s 0.34s,
        color 0.3s,
        padding-left 0.3s;
    }
  </style>

  <div class="font-sans bg-cream text-dark overflow-x-hidden antialiased">
    <!-- NAV -->
    <nav
      class="fixed top-0 left-0 right-0 z-[100] flex justify-between items-center px-[clamp(1.5rem,5vw,4rem)] py-5 bg-cream/50 backdrop-blur-[12px] border-b-[1.5px] border-dark/[0.06]"
    >
      <a href="/" class="flex items-center gap-3 no-underline">
        <span class="font-serif text-2xl italic text-dark no-underline">Charlie Hield</span>
      </a>
      <div class="hidden md:flex gap-8 items-center">
        <a
          href="#projects"
          class="font-sans text-base font-semibold text-dark no-underline tracking-[0.02em] transition-colors duration-300 hover:text-orange"
          >Projects</a
        >
        <a
          href="#about"
          class="font-sans text-base font-semibold text-dark no-underline tracking-[0.02em] transition-colors duration-300 hover:text-orange"
          >About</a
        >
        <a
          href="https://github.com/stursby"
          target="_blank"
          class="font-sans text-base font-semibold text-dark no-underline tracking-[0.02em] transition-colors duration-300 hover:text-orange flex items-center gap-2"
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
          </svg>
          GitHub
        </a>
        <a
          href="#contact"
          class="font-sans text-base font-semibold !bg-dark !text-white px-6 py-2.5 rounded-full transition-all duration-300 hover:!bg-orange hover:-translate-y-px"
          >Contact</a
        >
      </div>
      <button
        class="md:hidden bg-none border-none cursor-pointer w-9 h-9 relative z-[200] p-0 flex items-center justify-center"
        id="nav-hamburger"
        aria-label="Toggle menu"
      >
        <div class="hamburger-lines">
          <span
            class="block w-6 h-0.5 bg-dark mx-auto rounded-sm mb-[7px] transition-all duration-[0.35s] [transition-timing-function:cubic-bezier(0.16,1,0.3,1)]"
          ></span>
          <span
            class="block w-6 h-0.5 bg-dark mx-auto rounded-sm transition-all duration-[0.35s] [transition-timing-function:cubic-bezier(0.16,1,0.3,1)]"
          ></span>
          <span
            class="block w-6 h-0.5 bg-dark mx-auto rounded-sm mt-[7px] transition-all duration-[0.35s] [transition-timing-function:cubic-bezier(0.16,1,0.3,1)]"
          ></span>
        </div>
        <svg class="close-icon absolute w-5 h-5 opacity-0 transition-all duration-[0.35s]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div
      class="fixed inset-0 bg-dark/30 z-[140] opacity-0 pointer-events-none transition-opacity duration-[0.4s] backdrop-blur-[4px]"
      id="mobile-overlay"
    >
    </div>
    <div
      class="mobile-menu fixed top-0 right-0 w-full max-w-[360px] h-screen bg-cream z-[150] pt-28 px-10 pb-12 flex flex-col gap-0 translate-x-full transition-transform duration-[0.45s] [transition-timing-function:cubic-bezier(0.16,1,0.3,1)] shadow-[0_0_0_rgba(0,0,0,0)]"
      id="mobile-menu"
    >
      <a
        href="#projects"
        class="mobile-link font-serif text-[2.5rem] italic text-dark no-underline py-2.5 border-b-2 border-dark/[0.06] transition-all duration-300 opacity-0 translate-x-5 hover:text-orange hover:pl-3"
        >Projects</a
      >
      <a
        href="#about"
        class="mobile-link font-serif text-[2.5rem] italic text-dark no-underline py-2.5 border-b-2 border-dark/[0.06] transition-all duration-300 opacity-0 translate-x-5 hover:text-orange hover:pl-3"
        >About</a
      >
      <a
        href="#contact"
        class="mobile-link font-serif text-[2.5rem] italic text-dark no-underline py-2.5 border-b-2 border-dark/[0.06] transition-all duration-300 opacity-0 translate-x-5 hover:text-orange hover:pl-3"
        >Contact</a
      >
      <a
        href="https://github.com/stursby"
        target="_blank"
        class="mobile-link font-serif text-[2.5rem] italic text-dark no-underline py-2.5 border-b-2 border-dark/[0.06] transition-all duration-300 opacity-0 translate-x-5 hover:text-orange hover:pl-3"
        >GitHub</a
      >
    </div>

    <!-- HERO -->
    <section
      class="min-h-screen flex flex-col justify-center items-center px-[clamp(1.5rem,5vw,4rem)] pt-32 pb-16 text-center relative bg-cream overflow-hidden"
    >
      <MeshGradient />
      <h1
        class="hero-title relative z-10 font-serif text-[clamp(4rem,11vw,9.5rem)] leading-[0.9] tracking-[-0.03em] text-dark"
      >
        Building<br /><em class="italic text-orange">Digital</em><br />Experiences
      </h1>
      <p
        class="hero-subtitle relative z-10 font-sans text-[clamp(0.9rem,1.5vw,1.1rem)] font-medium text-[#666] max-w-[520px] leading-[1.4] mt-8"
      >
        Full-stack developer with 14+ years crafting high-performance websites, interactive platforms, and everything in
        between.
      </p>
      <div class="hero-ctas relative z-10 flex gap-4 mt-10">
        <a
          href="#projects"
          class="font-sans font-bold text-[0.9rem] px-8 py-3.5 bg-dark text-white border-2 border-dark rounded-full cursor-pointer no-underline transition-all duration-300 [transition-timing-function:cubic-bezier(0.16,1,0.3,1)] hover:bg-orange hover:border-orange hover:-translate-y-0.5 hover:shadow-[0_8px_25px_rgba(232,88,12,0.3)]"
          >View Projects</a
        >
        <a
          href="https://github.com/stursby"
          target="_blank"
          class="font-sans font-bold text-[0.9rem] px-8 py-3.5 bg-transparent text-dark border-2 border-dark rounded-full cursor-pointer no-underline transition-all duration-300 [transition-timing-function:cubic-bezier(0.16,1,0.3,1)] hover:bg-dark hover:text-white hover:-translate-y-0.5"
          >GitHub</a
        >
      </div>
    </section>

    <!-- MARQUEE STRIP -->
    <div class="bg-dark py-4 overflow-hidden relative">
      <div class="flex animate-marquee w-max">
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Vue / Nuxt <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Laravel <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >JavaScript <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Livewire <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Figma <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >HTML / CSS <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Filament <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Photoshop <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Vue / Nuxt <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Laravel <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >JavaScript <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Livewire <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Figma <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >HTML / CSS <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Filament <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
        <span
          class="font-sans font-extrabold text-[0.85rem] tracking-[0.15em] uppercase text-white px-10 whitespace-nowrap flex items-center gap-10"
          >Photoshop <span class="w-1.5 h-1.5 bg-orange rounded-full flex-shrink-0"></span></span
        >
      </div>
    </div>

    <!-- PROJECTS -->
    <div id="projects">
      <!-- PROJECT 01: DonerColle -->
      <section
        class="py-[clamp(4rem,8vw,8rem)] px-[clamp(1.5rem,5vw,4rem)] relative overflow-hidden bg-yellow text-dark transition-[background] duration-500"
      >
        <div
          class="absolute -bottom-[0.15em] -right-[0.02em] font-serif italic text-[clamp(12rem,30vw,28rem)] leading-none opacity-5 pointer-events-none select-none"
        >
          01
        </div>
        <div class="max-w-[1400px] mx-auto">
          <div class="flex justify-between items-start mb-6 flex-col md:flex-row gap-4 md:gap-0">
            <span class="font-sans font-black text-[clamp(4rem,8vw,7rem)] leading-none opacity-15">01</span>
          </div>
          <h2 class="font-serif text-[clamp(3rem,8vw,7rem)] leading-[0.92] tracking-[-0.02em] mb-6">
            DonerColle<br /><em class="italic">Partners</em>
          </h2>
          <p
            class="font-sans text-[clamp(0.95rem,1.5vw,1.15rem)] font-medium leading-[1.6] max-w-[550px] mb-6 opacity-80"
          >
            Corporate identity and web platform for a leading advertising agency merging creative firepower with
            strategic precision.
          </p>
          <div class="flex flex-wrap gap-2 mb-10">
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-dark/10 text-dark rounded-full">Nuxt/Vue</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-dark/10 text-dark rounded-full">TypeScript</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-dark/10 text-dark rounded-full">Tailwind CSS</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-dark/10 text-dark rounded-full">WebGL</span>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-12 gap-4 mb-8">
            <div
              class="md:col-span-7 md:row-span-2 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1497366216548-37526070297c?w=800&h=500&fit=crop"
                alt="Modern office workspace"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
            <div
              class="md:col-span-5 md:row-span-1 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1542744173-8e7e53415bb0?w=600&h=375&fit=crop"
                alt="Team collaboration"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
            <div
              class="md:col-span-5 md:row-span-1 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1600880292203-757bb62b4baf?w=600&h=375&fit=crop"
                alt="Creative brainstorm"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
          </div>
          <a
            href="https://donercolle.com/"
            target="_blank"
            class="font-sans font-bold text-[0.9rem] no-underline text-[inherit] inline-flex items-center gap-3 px-8 py-3.5 border-2 border-[currentColor] rounded-full transition-all duration-300 [transition-timing-function:cubic-bezier(0.16,1,0.3,1)] hover:bg-dark hover:text-white hover:border-dark hover:-translate-y-0.5"
            >View Project <span class="transition-transform duration-300 [.hover\:&]:translate-x-1">&rarr;</span></a
          >
        </div>
      </section>

      <!-- PROJECT 02: Google for Creators -->
      <section
        class="py-[clamp(4rem,8vw,8rem)] px-[clamp(1.5rem,5vw,4rem)] relative overflow-hidden bg-orange text-white transition-[background] duration-500"
      >
        <div
          class="absolute -bottom-[0.15em] -right-[0.02em] font-serif italic text-[clamp(12rem,30vw,28rem)] leading-none opacity-5 pointer-events-none select-none"
        >
          02
        </div>
        <div class="max-w-[1400px] mx-auto">
          <div class="flex justify-between items-start mb-6 flex-col md:flex-row gap-4 md:gap-0">
            <span class="font-sans font-black text-[clamp(4rem,8vw,7rem)] leading-none opacity-15">02</span>
            <span
              class="font-sans font-bold text-[0.8rem] tracking-[0.15em] uppercase px-5 py-2 border-2 border-[currentColor] rounded-full opacity-70"
              >Google</span
            >
          </div>
          <h2 class="font-serif text-[clamp(3rem,8vw,7rem)] leading-[0.92] tracking-[-0.02em] mb-6">
            Google for<br /><em class="italic">Creators</em>
          </h2>
          <p
            class="font-sans text-[clamp(0.95rem,1.5vw,1.15rem)] font-medium leading-[1.6] max-w-[550px] mb-6 opacity-80"
          >
            A content platform empowering creators worldwide with tools, tips, and resources to grow their audience and
            revenue.
          </p>
          <div class="flex flex-wrap gap-2 mb-10">
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-white/20 text-white rounded-full">React</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-white/20 text-white rounded-full">Node.js</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-white/20 text-white rounded-full">MongoDB</span>
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-white/20 text-white rounded-full">AWS</span>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-12 gap-4 mb-8">
            <div
              class="md:col-span-4 md:row-span-2 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1611162617474-5b21e879e113?w=600&h=750&fit=crop"
                alt="Content creation"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
            <div
              class="md:col-span-4 md:row-span-2 md:mt-8 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1616469829581-73993eb86b02?w=600&h=750&fit=crop"
                alt="Video production"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
            <div
              class="md:col-span-4 md:row-span-2 rounded-2xl overflow-hidden relative aspect-[16/10]"
            >
              <img
                src="https://images.unsplash.com/photo-1559028012-481c04fa702d?w=600&h=750&fit=crop"
                alt="Digital design workspace"
                loading="lazy"
                class="w-full h-full object-cover block"
              />
            </div>
          </div>
          <a
            href="https://creators.google/en-us/"
            target="_blank"
            class="font-sans font-bold text-[0.9rem] no-underline text-[inherit] inline-flex items-center gap-3 px-8 py-3.5 border-2 border-[currentColor] rounded-full transition-all duration-300 [transition-timing-function:cubic-bezier(0.16,1,0.3,1)] hover:bg-white hover:text-dark hover:border-white hover:-translate-y-0.5"
            >View Project <span class="transition-transform duration-300 [.hover\:&]:translate-x-1">&rarr;</span></a
          >
        </div>
      </section>

      <!-- PROJECT 03: Argument -->
      <section
        class="py-[clamp(4rem,8vw,8rem)] px-[clamp(1.5rem,5vw,4rem)] relative overflow-hidden bg-green text-white transition-[background] duration-500"
      >
        <div
          class="absolute -bottom-[0.15em] -right-[0.02em] font-serif italic text-[clamp(12rem,30vw,28rem)] leading-none opacity-5 pointer-events-none select-none"
        >
          03
        </div>
        <div class="max-w-[1400px] mx-auto">
          <div class="flex justify-between items-start mb-6 flex-col md:flex-row gap-4 md:gap-0">
            <span class="font-sans font-black text-[clamp(4rem,8vw,7rem)] leading-none opacity-15">03</span>
          </div>
          <h2 class="font-serif text-[clamp(3rem,8vw,7rem)] leading-[0.92] tracking-[-0.02em] mb-6">
            <em class="italic">Argument</em>
          </h2>
          <p
            class="font-sans text-[clamp(0.95rem,1.5vw,1.15rem)] font-medium leading-[1.6] max-w-[550px] mb-6 opacity-80"
          >
            An AI-powered debate and discussion platform where ideas clash, perspectives sharpen, and critical thinking
            thrives.
          </p>
          <div class="flex flex-wrap gap-2 mb-10">
            <span class="font-sans text-sm font-semibold px-4 py-2 bg-white/20 text-white rounded-full">Next.js</span>
