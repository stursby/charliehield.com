import MeshGradient from '../components/MeshGradient.astro'

const projects = (await getCollection('projects')).sort((a, b) => a.data.order - b.data.order)

// Helper function to get Tailwind grid classes
function getGridClasses(colSpan: number, rowSpan: number) {
  const colSpanClasses: Record<number, string> = {
    4: 'md:col-span-4',
    5: 'md:col-span-5',
    6: 'md:col-span-6',
    7: 'md:col-span-7',
    8: 'md:col-span-8',
    12: 'md:col-span-12'
  }

  const rowSpanClasses: Record<number, string> = {
    1: 'md:row-span-1',
    2: 'md:row-span-2'
  }

  const colClass = colSpanClasses[colSpan] || 'md:col-span-12'
  const rowClass = rowSpanClasses[rowSpan] || 'md:row-span-1'

  return `${colClass} ${rowClass}`.trim()
}
